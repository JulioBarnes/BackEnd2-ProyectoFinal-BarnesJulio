<div class="m-3 bg-light rounded-4 p-3">
  <h1>REGISTRO</h1>
  <form action="/api/session/register" method="POST">
    <div class="form-group">
      <label for="first_name">Nombre</label>
      <input
        type="text"
        name="first_name"
        id="first_name"
        class="form-control"
      />
    </div>

    <div class="form-group">
      <label for="last_name">Apellido</label>
      <input type="text" name="last_name" id="last_name" class="form-control" />
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" name="email" id="email" class="form-control" />
    </div>

    <div class="form-group">
      <label for="age">Edad</label>
      <input type="number" name="age" id="age" class="form-control" />
    </div>

    <div class="form-group">
      <label for="password">Contraseña</label>
      <input
        type="password"
        name="password"
        id="password"
        class="form-control"
      />
    </div>
    <button type="submit" class="btn btn-success mt-2">Registrarse</button>
  </form>

  <div class="mt-3">
    <a href="/" class="btn btn-primary">
      <i class="bi bi-house-door-fill">Home</i>
    </a>
    <a href="/login" class="btn btn-primary">
      <i class="bi bi-arrow-in-right">Iniciar Sesión</i>
    </a>
  </div>
</div>